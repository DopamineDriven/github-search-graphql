{
	"extends": "stylelint-config-recommended",
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extends",
					"tailwind",
					"import",
					"layer",
					"screen",
					"media",
					"apply"
				]
			}
		],
		"block-no-empty": null,
		"named-grid-areas-no-invalid": null,
		"unit-whitelist": [
			"em",
			"rem",
			"s",
			"px",
			"%",
			"vw",
			"vh",
			"deg",
			"ms",
			"fr"
		],
		"at-rule-empty-line-before": null,
		"no-descending-specificity": null
	}
}
